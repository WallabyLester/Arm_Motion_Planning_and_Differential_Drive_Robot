<link name="base_link" >
    <visual>
    <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
            <cylinder radius="0.1" length="0.1"/>
        </geometry>
        <material name="transparent_mat">
            <color rgba="1 1 1 0" />
        </material>
    </visual>
</link>

<joint name ="base" type="fixed">
    <axis xyz="0 0 0" />
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="chassis" />
</joint>

<link name="chassis">
    <visual>
        <origin rpy="0 0 0" xyz="0 0 0" />
        <geometry>
            <box size="0.5 0.3 0.1" />
        </geometry>
        <material name="black">
            <color rgba="0 0 0 1"/>
        </material>
        <inertial>
            <mass value="5.0" />
            <origin rpy="0 0 0" xyz="0 0 0.1" />
            <inertia ixx="1/12*${5.0}*(${0.1}**2 + ${0.5}**2)" ixy="0.0" ixz="0.0" iyy="1/12*${5.0}*(${0.3}**2 + ${0.5}**2)" iyz="0.0" izz="1/12*${5.0}*(${0.3}**2 + ${0.1}**2)"/>
        </inertial>
    </visual>
    <collision>
        <geometry>
            <box size="0.5 0.3 0.1"/>
        </geometry>
    </collision>
</link>

<joint name="right" type="continuous">
    <axis xyz="0 1 0" />
    <origin xyz="0.1875 -0.15 0" rpy="0 0 0" />
    <parent link="chassis" />
    <child link="right_wheel" />
</joint>

<link name="right_wheel">
    <visual>
    <origin rpy="0 ${pi/2} ${pi/2}" xyz="0 0 0" />
        <geometry>
            <cylinder length="0.04" radius="0.15"/>
        </geometry>
        <material name="green_mat">
            <color rgba="0 1 0 1" />
        </material>
        <inertial>
           <mass value="0.2"/>
           <inertia ixx="1/12*${0.2}*(3*${0.15}**2 + ${0.04}**2)" ixy="0.0" ixz="0.0" iyy="1/12*${0.2}*(3*${0.15}**2 + ${0.04}**2)" iyz="0.0" izz="1/2*${0.2}*${0.15}**2"/>
         </inertial>
    </visual>
    <collision>
           <geometry>
             <cylinder length="0.04" radius="0.15"/>
           </geometry>
    </collision>
</link>

<joint name="left" type="continuous">
    <axis xyz="0 1 0" />
    <origin xyz="0.1875 0.15 0" rpy="0 0 0" />
    <parent link="chassis" />
    <child link="left_wheel" />
</joint>

<link name="left_wheel">
    <visual>
    <origin rpy="0 ${pi/2} ${pi/2}" xyz="0 0 0" />
        <geometry>
            <cylinder length="0.04" radius="0.15"/>
        </geometry>
        <material name="green_mat">
            <color rgba="0 1 0 1" />
        </material>
        <inertial>
           <mass value="0.2"/>
           <inertia ixx="1/12*${0.2}*(3*${0.15}**2 + ${0.04}**2)" ixy="0.0" ixz="0.0" iyy="1/12*${0.2}*(3*${0.15}**2 + ${0.04}**2)" iyz="0.0" izz="1/2*${0.2}*${0.15}**2"/>
         </inertial>
    </visual>
    <collision>
           <geometry>
             <cylinder length="0.04" radius="0.15"/>
           </geometry>
    </collision>
</link>


</robot>